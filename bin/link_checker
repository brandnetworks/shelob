#!/usr/bin/env ruby

require 'optparse'
require 'link_checker'

def main args
  puts LinkChecker::Spider.new(args[0], verbose: options[:verbose]).check
end

options = {verbose: 0}
optparse = OptionParser.new do |opts|
  opts.banner = "Usage: link_checker [options] root_url"

  opts.on('-v', "--[no-]verbose", "Print simple information(overrides -r)") do
    options[:verbose] = 1
  end

  opts.on('-r', '--[no-]really-verbose', "Print lots of information(overrides -v)") do
    options[:verbose] = 2
  end
  
  opts.on_tail('-h', '--help', 'Show this message') do
    puts opts
    exit
  end
end.parse!

if ARGV.empty?
  puts optparse
  exit 1
end

begin
  exit main(ARGV)
rescue => ex
  STDERR.puts ex.message
end

